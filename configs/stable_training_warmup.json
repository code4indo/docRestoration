{
  "experiment_name": "stable_training_warmup",
  "description": "Fresh training with enhanced_v2 models. Applying a 15-epoch warm-up and 10-epoch annealing to stabilize CTC loss from the start.",

  "generator_version": "enhanced_v2",
  "discriminator_version": "enhanced_v2",

  "tfrecord_path": "dual_modal_gan/data/dataset_gan.tfrecord",
  "charset_path": "real_data_preparation/real_data_charlist.txt",
  "recognizer_weights": "models/best_htr_recognizer/best_model.weights.h5",
  "checkpoint_dir": "dual_modal_gan/checkpoints/stable_training_warmup",
  "sample_dir": "dual_modal_gan/outputs/samples_stable_training_warmup",

  "resume": false,
  "epochs": 40,
  "batch_size": 2,
  "steps_per_epoch": 2133,
  "save_interval": 1,
  "eval_interval": 1,
  "seed": 42,
  "max_checkpoints": 5,
  "gpu_id": "0",

  "early_stopping": {
    "enabled": true,
    "patience": 15,
    "min_delta": 0.01,
    "restore_best_weights": true
  },

  "lr_g": 0.0002,
  "lr_d": 0.0002,
  "use_lr_schedule": false,
  "warmup_epochs": 15,
  "annealing_epochs": 10,

  "pixel_loss_weight": 200.0,
  "adv_loss_weight": 1.5,
  "rec_feat_loss_weight": 5.0,
  "ctc_loss_weight": 1.0,
  "perceptual_loss_weight": 0.2,
  "gradient_clip_norm": 1.0,
  "ctc_loss_clip_max": 300.0,

  "adaptive_loss_balancing": true,
  "target_ctc_ratio": 0.65,
  "target_visual_ratio": 0.35,
  "adaptation_rate": 0.15
}