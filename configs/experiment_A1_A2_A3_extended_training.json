{
  "experiment_name": "experiment_A1_A2_extended_training",
  "description": "Testing strategies A1 (Extended Training 5 epochs) + A2 (Cosine Annealing LR Schedule). Baseline PSNR: 23.18 dB, Expected gain: +0.5-1.1 dB PSNR (target: 23.7-24.3 dB). Note: A3 (Gradient Accumulation) requires code modification - tested separately.",
  "model": {
    "generator": {
      "architecture": "enhanced",
      "filters": 64,
      "num_residual_blocks": 9
    },
    "discriminator": {
      "architecture": "enhanced_v2",
      "filters": 64,
      "num_layers": 3
    },
    "recognizer": {
      "architecture": "crnn",
      "use_pretrained": true
    }
  },
  "training": {
    "epochs": 5,
    "steps_per_epoch": 2133,
    "batch_size": 2,
    "learning_rate_g": 0.0002,
    "learning_rate_d": 0.0002,
    "beta1": 0.5,
    "beta2": 0.999,
    "gradient_clip": 1.0,
    "use_amp": false,
    "precision": "fp32",
    "use_lr_schedule": true,
    "lr_decay_epochs": 50,
    "lr_alpha": 1e-6,
    "seed": 42
  },
  "early_stopping": {
    "enabled": true,
    "patience": 15,
    "monitor": "val_psnr",
    "mode": "max",
    "min_delta": 0.01
  },
  "loss_weights": {
    "pixel_loss_weight": 200.0,
    "adv_loss_weight": 1.5,
    "rec_feat_loss_weight": 5.0,
    "ctc_loss_weight": 1.0
  },
  "loss_config": {
    "pixel_loss_type": "mae",
    "use_perceptual_loss": false,
    "discriminator_loss_type": "lsgan",
    "gradient_penalty_weight": 0.0,
    "ctc_loss_clip_max": 300.0
  },
  "data": {
    "tfrecord_path": "dual_modal_gan/data/dataset_gan.tfrecord",
    "charset_path": "real_data_preparation/real_data_charlist.txt",
    "recognizer_weights": "models/best_htr_recognizer/best_model.weights.h5",
    "image_height": 64,
    "image_width": 256,
    "augmentation": {
      "random_crop": false,
      "random_flip": false,
      "random_rotation": 0
    }
  },
  "checkpoints": {
    "save_frequency": 1,
    "max_checkpoints": 10,
    "keep_best_only": false,
    "monitor_metric": "psnr"
  },
  "logging": {
    "log_frequency": 50,
    "save_images_frequency": 100,
    "use_tensorboard": true,
    "mlflow_tracking": true
  }
}
